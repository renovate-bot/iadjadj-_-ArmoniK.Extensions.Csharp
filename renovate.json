{
  "forkProcessing": "enabled",
  
  "schedule": [ "every weekday" ],
  
  "packageRules": [
    {
      "matchFiles": ["Armonik*.csproj"],
      "description": "Group all Armonik packages into single PRs to reduce noise",
      "matchPackagePrefixes": ["ArmoniK"],
      "groupName": "Armonik dependencies",
      "excludePackageNames": ["^Microsoft\\.", "^System\\."]
    },
    {
      "groupName": "MyProject Docker Images",
      "includeForks": true,
      "excludePackageNames": ["^baseimage\\.", "^microsoft\\."]
    }
  ]
}
